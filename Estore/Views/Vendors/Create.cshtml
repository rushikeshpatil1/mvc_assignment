@model Estore.Models.vendors

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2 style="text-align:center">Add New Vendor</h2>
@using (Html.BeginForm("create", "vendors", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-row">
        <div class="form-group col-md-3">
            @* <label for="ProductName">Vendor Name</label>
                <input type="text" class="form-control" id="VendorName" name="VendorName" placeholder="Enter Vendor Name">*@


            @Html.LabelFor(temp => temp.VendorName)
            @Html.TextBoxFor(temp => temp.VendorName, new { placeholder = "Enter Vendor Name", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.VendorName)

        </div>
        <div class="form-group col-md-3">
            @*     <label for="Address">Address</label>
                <input type="text" class="form-control" id="Address" name="Address" placeholder="Enter Address">*@

            @Html.LabelFor(temp => temp.Address)
            @Html.TextBoxFor(temp => temp.Address, new { placeholder = "Enter Address", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Address)

        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            @* <label for="Email">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter Email">*@


            @Html.LabelFor(temp => temp.Email)
            @Html.TextBoxFor(temp => temp.Email, new { placeholder = "Enter Email", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Email)
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            @*          <label for="contact">Contact</label>
                <input type="text" class="form-control" id="Contact" name="Contact" placeholder="Enter Contact No">*@

            @Html.LabelFor(temp => temp.Contact)
            @Html.TextBoxFor(temp => temp.Contact, new { placeholder = "Enter Contact", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Contact)
        </div>

    </div>

    <div class="form-group form-group1">
        <label for="Image">Upload Image</label>
        <input type="file" class="form-control-file" id="Image" name="Photo" />
    </div>
    <div class="form-row1">

        <button type="submit" class="btn btn-success">Create</button>
        <a class="btn btn-danger" href="/vendors/index">Cancel</a>
        </div>
        }


