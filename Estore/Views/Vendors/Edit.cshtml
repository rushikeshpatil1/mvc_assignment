@model Estore.Models.vendors

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}



<h2>Update @Model.VendorName</h2>
@using (Html.BeginForm("edit", "vendors", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-row">
        <div class="form-group col-md-6">
            @*        <label for="VendorName">Vendor Name</label>
                <input type="hidden" name="VendorID" value="@Model.VendorID" />
                <input type="text" class="form-control" id="VendorName" name="VendorName" placeholder="Enter Vendor Name" value="@Model.VendorName">*@



            @Html.LabelFor(temp => temp.VendorName)
            @Html.HiddenFor(temp => temp.VendorID)
            @Html.TextBoxFor(temp => temp.VendorName, new { placeholder = "Enter Product Name", value = "@Model.VendorName", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.VendorName)
        </div>
        <div class="form-group col-md-6">
            @*
                <label for="Address">Address</label>
                <input type="text" class="form-control" id="Address" name="Address" placeholder="Enter Address" value="@Model.Address">
            *@


            @Html.LabelFor(temp => temp.Address)
            @Html.TextBoxFor(temp => temp.Address, new { placeholder = "Enter Address", value = "@Model.Address", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Address)

        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @*            <label for="Email">Email</label>
                <input type="text" class="form-control" id="Email" name="Email" placeholder="Enter Email" value="@Model.Email">*@

            @Html.LabelFor(temp => temp.Email)
            @Html.TextBoxFor(temp => temp.Email, new { placeholder = "Enter Email", value = "@Model.Email", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Email)

        </div>
        <div class="form-group col-md-6">
            <label for="Contact"> Contact</label>
            @*
                <input type="text" class="form-control" id="Contact" name="Contact" placeholder="Enter Contact" value="@Model.Contact">*@
            @Html.LabelFor(temp => temp.Contact)
            @Html.TextBoxFor(temp => temp.Contact, new { placeholder = "Enter Contact", value = "@Model.Contact", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Contact)
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label for="Image">Image</label>

            <input type="file" class="form-control-file" id="Photo" name="Photo" value="@Model.Photo" />
        </div>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a class="btn btn-danger" href="/vendors/index">Cancel</a>
}


