@model Estore.Models.products

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Edit Product</h2>
@using (Html.BeginForm("edit", "products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-row">
        <div class="form-group col-md-6">
            @*   <label for="ProductName">Product Name</label>
                <input type="hidden" name="ProductID" value="@Model.ProductID" />
                <input type="text" class="form-control" id="ProductName" name="ProductName" placeholder="Product Name" value="@Model.ProductName">*@

            @Html.LabelFor(temp => temp.ProductName)
            @Html.HiddenFor(temp => temp.ProductID)
            @Html.TextBoxFor(temp => temp.ProductName, new { placeholder = "Enter Product Name", value = "@Model.ProductName", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.ProductName)


        </div>
        <div class="form-group col-md-6">
            @* <label for="Price">Price</label>
                <input type="number" class="form-control" id="Price" name="Price" placeholder="Price" value="@Model.Price">*@


            @Html.LabelFor(temp => temp.Price)
            @Html.TextBoxFor(temp => temp.Price, new { placeholder = "Enter Price", value = "@Model.Price", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Price)

        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @*            <label for="DateOfPurchase">Date of Purchase</label>
                <input type="date" class="form-control" id="DateOfPurchase" name="DateOfPurchase" placeholder="Date of Purchase" value="@Model.DateOfPurchase.Value.ToString("yyyy-MM-dd")">*@

            @Html.LabelFor(temp => temp.DateOfPurchase)
            @Html.TextBoxFor(temp => temp.DateOfPurchase, new { placeholder = "Date of Purchase", value = "@Model.DateOfPurchase.Value.ToString('yyyy-MM-dd')", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.DateOfPurchase)

        </div>

        <div class="form-group col-md-6">
            @*    <label for="AvailabilityStatus">Availability Status</label>
                <select class="form-control" id="AvailabilityStatus" name="AvailabilityStatus" >
                    <option value="@Model.AvailabilityStatus">@Model.AvailabilityStatus</option>
                    <option value="InStock">In Stock</option>
                    <option value="OutOfStock">Out of Stock</option>
                </select>*@


            @Html.LabelFor(temp => temp.AvailabilityStatus, new { @class = "form-check-label" })
            <div class="form-check">
                @Html.RadioButtonFor(temp => temp.AvailabilityStatus, "InStock", new { @class = "form-check-input", id = "InStock" })
                <label class="form-check-label" for="InStock">In Stock</label>
            </div>
            <div class="form-check">
                @Html.RadioButtonFor(temp => temp.AvailabilityStatus, "OutOfStock", new { @class = "form-check-input", id = "OutOfStock" })
                <label class="form-check-label" for="OutOfStock">Out of Stock</label>
            </div>
            @Html.ValidationMessageFor(temp => temp.AvailabilityStatus)
        </div>


    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @*     <label for="VendorID">Sold By</label>
                <select class="form-control" id="VendorID" name="VendorID">
                    <option value="">Please Select</option>
                    @foreach (var van in ViewBag.Vendors)
                    {
                        if (van.VendorID == Model.VendorID)
                        {
                            <option value="@van.VendorID" selected="selected">@van.VendorName</option>
                        }
                        else
                        {
                            <option value="@van.VendorID">@van.VendorName</option>
                        }
                    }
                </select>*@



            @Html.LabelFor(temp => temp.VendorID)
            @Html.DropDownListFor(temp => temp.VendorID, new SelectList(ViewBag.vendors, "VendorID", "VendorName"), "Please Select Vendor", new { @class = "form-control" })
            
            @Html.ValidationMessageFor(temp => temp.VendorID)
        </div>

    </div>


    <button type="submit" class="btn btn-success">Save</button>
    <a class="btn btn-danger" href="/products/index">Cancel</a>
}

    <script>
        $(document).ready(function () {
            $("#DateOfPurchase").datepicker({
                dateFormat: "dd-mm-yy",
                changemonth: true,
                changeyear: true
            });
        });
    </script>
