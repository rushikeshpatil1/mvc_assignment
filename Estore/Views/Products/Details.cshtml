    .profile-card {
        border-radius: 20px;
    @*    width: 600px;*@
        height:450px;
        background-color: white;
        display: flex;
        flex: 1;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-right: -50%;
        transform: translate(-50%, -50%);
        margin-bottom: 70px;
        box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);
    }

        .profile-card header {
          @*  border-right: 1px solid #d32f2f;*@
