            margin: auto;
            margin-top: 40px;
            border: 8px solid transparent;
            transition: .4s;
        }



        .profile-card h1 {
            font-family:inherit;
           @* color: #e57373;*@
            text-align: center;
        }

        .profile-card h2,h3 {
            font-family: inherit;
            font-size: 20px;
